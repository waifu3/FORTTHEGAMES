@model Usuario
@{
    ViewData["Title"] = "Login";
}

@section scripts{
    <!--Fontawesome CDN-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css"
    integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

    <!--Custom styles-->
    <link rel="stylesheet" type="text/css" href="~/css/login.css">
}
<div class="container-fluid py-3 p-0 pb-0 m-0">
	<div class="container">
		<div class="section-title">
			<h4 class="text-primary text-uppercase" style="letter-spacing: 5px;">FOR THE GAME</h4>
			
		</div>

	</div>
</div>

<div class="container-fluid pt-0 pb-5">
	<div class="d-flex justify-content-center h-100">
		<div class="card">
			<div class="card-header">
				<h3>Iniciar sesión</h3>
				
			</div>
			<div class="card-body">
				<form method="post" asp-action="Login" asp-controller="Acceso">
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-user"></i></span>
						</div>
						<input type="text" class="form-control" placeholder="username" required asp-for="correo">

					</div>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-key"></i></span>
						</div>
						<input type="password" class="form-control" placeholder="password" required asp-for="password">
					</div>
					<div class="row align-items-center remember">
						<input type="checkbox" asp-for="MantenerActivo">Recuerdame
					</div>
					<div class="form-group">
						<input type="submit" value="Acceso" class="btn float-right login_btn">

					</div>
				</form>
			</div>
			<div class="card-footer">
				<div class="d-flex justify-content-center links">
					¿No tienes una cuenta?<a asp-controller="Acceso" asp-action="SignUp">Registrarse</a>
				</div>
				<div class="d-flex justify-content-center">
					¿Olvidaste tu contraseña?<a asp-controller="Acceso" asp-action="RecuperarPassword">Si</a>
				</div>
				@ViewBag.Error
			</div>
		</div>
	</div>
</div>
