@model Usuario
@{
    ViewData["Title"] = "Registrarse";
}

@section scripts{
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

    <!--Custom styles-->
    <link rel="stylesheet" type="text/css" href="~/css/registrarse.css">
}

<div class="container">
    <div class="col-md-6 mx-auto text-center">
        <div class="header-title">
            <h1 class="wv-heading--title">
                Registrate!
            </h1>
            <h2 class="wv-heading--subtitle">
                y compra los mejor productor de videjuegos al mejor precio en for the game.
            </h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="myform form ">
                <form action="" method="post" name="login">
                    <div class="form-group">
                        <input type="text" class="form-control my-input" placeholder="nombre" required asp-for="nombre">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control my-input" placeholder="Apellido" required asp-for="apellido">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control my-input" placeholder="Rut" required asp-for="rut">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control my-input" placeholder="Correo" required asp-for="correo">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control my-input" placeholder="Direccion" required asp-for="direccion">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control my-input" placeholder="Password" required asp-for="password">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control my-input" placeholder="Password Repeat" required asp-for="passwordRepeat">
                    </div>
                    <div class="text-center ">
                        <button type="submit" class=" btn btn-block send-button tx-tfm">Crear Cuenta</button>
                    </div>
                    <div class="col-md-12 ">
                        <div class="login-or">
                            <hr class="hr-or">
                            <span class="span-or"></span>
                        </div>
                    </div>
                   
                    @ViewBag.Message
                    <p class="small mt-3">
                        Al registrarse, está indicando que ha leído y acepta los <a href="#" class="ps-hero__content__link">Términos de uso</a> y <a href="#">la Política de privacidad .</a>.
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>