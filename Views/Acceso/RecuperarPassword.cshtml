@using FORTTHEGAMES.Data.ViewModels;
@model ViewModelLogin
@{
	ViewData["Title"] = "Login";
}

@section scripts{
	<!--Fontawesome CDN-->
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css"
		  integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">

	<!--Custom styles-->
	<link rel="stylesheet" type="text/css" href="~/css/login.css">
}
<div class="container-fluid py-3 p-0 pb-0 m-0">
	<div class="container">
		<div class="section-title">
			<h4 class="text-primary text-uppercase" style="letter-spacing: 5px;">FOR THE GAME</h4>

		</div>

	</div>
</div>

<div class="container-fluid pt-0 pb-5">
	<div class="d-flex justify-content-center h-100">
		<div class="card">
			<div class="card-header">
				<h3>Recuperar Contraseña</h3>

			</div>
			<div class="card-body">
				<form method="post" asp-action="RecuperarPassword" asp-controller="Acceso">
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-user"></i></span>
						</div>
						<input type="text" class="form-control" placeholder="correo" required asp-for="correo">

					</div>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-key"></i></span>
						</div>
						<input type="password" class="form-control" placeholder="nueva password" required asp-for="password">
					</div>
					<div class="form-group">
						<input type="submit" value="Actualizar" class="btn float-right login_btn">

					</div>
				</form>
			</div>
			<div class="card-footer">

				@ViewBag.Error
			</div>
		</div>
	</div>
</div>
